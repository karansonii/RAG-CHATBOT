# ==================== AI MODEL CONFIGURATION ====================
# Primary Gemini API Configuration
GEMINI_API_KEY=*****
# Gemini Model Selection
# Options: gemini-2.5-flash, gemini-1.5-pro, gemini-1.5-flash
GEMINI_MODEL_NAME=gemini-2.5-flash
# Alternative model for specific tasks (optional)
GEMINI_FALLBACK_MODEL=gemini-1.5-flash
# Gemini Model Tuning Parameters
GEMINI_TEMPERATURE=0.3
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40
# Maximum tokens for responses
MAX_RESPONSE_TOKENS=4096
# Request timeout (seconds)
API_TIMEOUT=30
# ==================== EMBEDDING CONFIGURATION ====================
# Sentence Transformer Model for RAG embeddings
EMBED_MODEL=sentence-transformers/all-mpnet-base-v2
# Embedding dimension (auto-detected, but can override)
# EMBED_DIM=768
# Random seed for reproducibility
RANDOM_SEED=42
# Batch size for embedding generation
EMBEDDING_BATCH_SIZE=32
# Enable L2 normalization for embeddings (true/false)
NORMALIZE_EMBEDDINGS=true
# ==================== RAG CONFIGURATION ====================
# Number of chunks to retrieve (increased for better recall)
RAG_TOP_K=10
# Similarity threshold (0.0 = accept all, 0.1-0.5 = higher precision)
RAG_SIMILARITY_THRESHOLD=0.0
# Answer cache settings
ANSWER_CACHE_MAX_SIZE=1000
# ==================== DOCUMENT PROCESSING ====================
# General document chunk settings
CHUNK_SIZE=200
CHUNK_OVERLAP=40
# PowerPoint specific chunk settings
PPT_CHUNK_SIZE=800
PPT_CHUNK_OVERLAP=100
# Supported file extensions (comma-separated)
SUPPORTED_FILE_EXTENSIONS=*.docx,*.txt,*.pdf,*.pptx,*.ppt,*.csv,*.md
# ==================== STORAGE PATHS ====================
# Vector database storage
VECTOR_DB_PATH=./data/vectorstore
# Hybrid memory index
HYBRID_MEMORY_PATH=./data/hybrid_memory.index
# Entity storage for memory
ENTITIES_PATH=./data/entities.json
# Chat history logs
CHAT_LOG_PATH=./data/chat_history.json
# Data folder for documents
DATA_FOLDER=./data/
# Cache directory for OCR results
CACHE_DIR=./data/cache
# Data loader log file
DATA_LOADER_LOG=data_loader.log
# ==================== CHAT HISTORY CONFIGURATION ====================
# Directory to store user chat histories (each user gets their own JSON file)
CHAT_HISTORY_DIR=./data_cache/chat_history
# Number of days to retain chat history (default: 30 days)
# After this period, old conversations will be automatically deleted
CHAT_HISTORY_RETENTION_DAYS=30
# Maximum number of recent messages to load for context (default: 10)
CHAT_HISTORY_CONTEXT_LIMIT=10
# Enable automatic cleanup of old histories (true/false)
CHAT_HISTORY_AUTO_CLEANUP=true
# ==================== EXTERNAL APIs ====================
# Hugging Face Access Token
HUGGINGFACE_API_KEY=***
# ==================== OCR SETTINGS ====================
# OCR Language
OCR_LANGUAGE=en
# OCR confidence threshold (0.0 to 1.0)
OCR_CONFIDENCE_THRESHOLD=0.7
# Enable angle classification for OCR
OCR_ANGLE_DETECTION=true
# ==================== LANGUAGE SETTINGS ====================
# Default language (en, sw, hi, fr, es)
DEFAULT_LANGUAGE=en
# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,sw
# Enable auto language detection
AUTO_LANGUAGE_DETECTION=true
# ==================== VOICE SETTINGS ====================
# TTS Language
TTS_DEFAULT_LANG=en
# Audio sample rate
AUDIO_SAMPLE_RATE=16000
# Audio chunk size
AUDIO_CHUNK_SIZE=1024
# Fuzzy matching threshold for voice correction (0-100)
FUZZY_MATCH_THRESHOLD=80
# Special words for voice correction (comma-separated)
FUZZY_SPECIAL_WORDS=egp,e-gp,e-GP,EGP
# Special threshold for rare/important words (0-100)
FUZZY_SPECIAL_THRESHOLD=60
# ==================== VISUAL GENERATION ====================
# Complexity thresholds
VISUAL_SIMPLE_THRESHOLD=3
VISUAL_MEDIUM_THRESHOLD=6
VISUAL_COMPLEX_THRESHOLD=10
# Max steps in diagrams
MAX_DIAGRAM_STEPS=25
# ==================== UI SETTINGS ====================
# Streamlit app configuration
APP_TITLE=AI Chatbot Assistant
APP_LAYOUT=wide
SIDEBAR_STATE=expanded
# Chunks per page in preview
CHUNKS_PER_PAGE=10
# ==================== CACHING ====================
# Enable caching
ENABLE_CACHE=true
# Cache expiry (hours)
CACHE_EXPIRY_HOURS=24
# ==================== SECURITY ====================
# Enable prompt injection protection
ENABLE_PROMPT_SANITIZATION=true
# Maximum prompt length
MAX_PROMPT_LENGTH=15000
# Maximum user input length
MAX_USER_INPUT_LENGTH=2000
# ==================== DEBUGGING ====================
# Enable debug mode
DEBUG_MODE=false
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
# Enable prompt logging
LOG_PROMPTS=false
